
@{
    ViewBag.Title = "List";
    var newList = ViewBag.data as string[];

    var curpage = (int)ViewBag.Page;
    var start = curpage - 3;

}

<h2>List</h2>

<h3>第 @ViewBag.Page 页</h3>

<ol>
    @for (int i = 0; i < Model.Length; i++)
    {
        <li>@Model[i]</li>
    }
</ol>

<ol class="list-group">
    @foreach (var item in newList)
    {
        <li class="list-group-item"><span class="badge">新</span>@item</li>
    }
</ol>

<ol>
    @for (int i = start; i < curpage + 3; i++)
    {
        <li>
            @*<a href="/Home/List?page=@i">第 @i 页</a>*@
            @Html.ActionLink(string.Format("第{0}页", i), "List", "Home", new { page = i }, null)
        </li>
    }
</ol>
