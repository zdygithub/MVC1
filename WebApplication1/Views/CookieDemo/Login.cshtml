
@{
    ViewBag.Title = "Login";
}

<h2>登录</h2>

<form method="post" action="@Url.Action("LoginValidate")">

<table class="table table-bordered" >

    <tr>
        <td>用户名：</td>
        <td><input type="text" name="name" /></td>
    </tr>
    <tr>
        <td>密码：</td>
        <td><input  type="password" name="password" /></td>
    </tr>
    <tr>
        <td></td>
        <td><button type="submit">登录</button></td>
    </tr>

</table>

</form>

